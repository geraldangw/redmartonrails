<header id="topheader" class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to image_tag("redmart-logo.png", alt: "Redmart logo", :style => "height: 40px; margin-top: 0%; margin-bottom: -4%;"),
        root_path %>
        <nav>
            <ul id="headerlinks" class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                <li><%= link_to "Get Inspired", root_path %></li>
                <li><%= link_to "Your Products", current_user %></li>
                <li><%= link_to "Create A Product", create_path %></li>
                <li><%= link_to "Browse Users", users_path %></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Account
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Profile", current_user %></li>
                        <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                        <li class="divider"></li>
                        <li>
                            <%= link_to "Log out", logout_path, method: "delete" %>
                        </li>
                    </ul>
                </li>
            <% else %>
                <li><%= link_to "LOG IN", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
