<%= form_for(@product, ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :product_id, :value => @product.id %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Share a new review..." %>
  </div>
  <%= f.submit "Share your review", class: "btn btn-primary", id: "loginbtn" %>
<% end %>
