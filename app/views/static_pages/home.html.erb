<% provide(:title, "Home") %>

<% if logged_in? %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <%= render 'shared/user_info' %>
        </section>
        <section class="micropost_form">
            <%= render 'shared/micropost_form' %>
        </section>
    </aside>
</aside>
<div class="col-md-8">
    <h3>Micropost Feed</h3>
    <%= render 'shared/feed' %>
</div>
</div>
<% else %>

<div class="center jumbotron">
<h1 id="main">Fresh Groceries.
    <br>
    Right at your doorstep.</h1>

<h2>
    Best prices guaranteed.</h2>

<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary", id: "signup" %>
</div>

<% end %>
